<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:foreground="@drawable/selector_item"
    android:descendantFocusability="blocksDescendants">

    <LinearLayout
        android:id="@+id/basesLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="@dimen/margin_small"
            android:layout_marginEnd="@dimen/margin_small"
            android:layout_marginLeft="@dimen/margin_medium"
            android:layout_marginRight="@dimen/margin_small"
            android:layout_marginStart="@dimen/margin_medium"
            android:layout_marginTop="@dimen/margin_medium"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_small"
            android:textStyle="bold"
            tools:text="116b Palacio de oriente" />

        <TextView
            android:id="@+id/streetTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_small"
            android:layout_marginEnd="@dimen/margin_small"
            android:layout_marginLeft="@dimen/margin_medium"
            android:layout_marginRight="@dimen/margin_small"
            android:layout_marginStart="@dimen/margin_medium"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            android:textColor="@color/gray"
            android:textSize="@dimen/text_tiny"
            android:textStyle="bold"
            tools:text="Calle Carlos III No 1" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_small"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginRight="@dimen/margin_small"
            android:layout_marginStart="@dimen/margin_small"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/totalTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_small"
                android:gravity="center"
                android:textColor="@android:color/holo_blue_dark"
                android:textSize="@dimen/text_tiny"
                android:textStyle="bold"
                tools:text="Bases total 24" />

            <TextView
                android:id="@+id/freeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_small"
                android:gravity="center"
                android:textColor="@android:color/holo_red_light"
                android:textSize="@dimen/text_tiny"
                android:textStyle="bold"
                tools:text="Bases libres 24" />

            <TextView
                android:id="@+id/engagedTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_small"
                android:gravity="center"
                android:textColor="@android:color/holo_green_dark"
                android:textSize="@dimen/text_tiny"
                android:textStyle="bold"
                tools:text="Enganchadas 24" />

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/arrowImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/favImageButton"
        android:layout_marginTop="@dimen/margin_medium"
        android:layout_marginEnd="@dimen/margin_medium"
        android:layout_marginRight="@dimen/margin_medium"
        android:layout_marginStart="@dimen/margin_medium"
        android:layout_marginLeft="@dimen/margin_medium"
        android:src="@drawable/ic_arrow_right"
        android:layout_toRightOf="@+id/basesLayout"
        android:layout_toEndOf="@+id/basesLayout"
        />

    <ImageButton
        android:id="@+id/favImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_medium"
        android:src="@drawable/ic_favorite_empty"
        android:layout_toRightOf="@+id/basesLayout"
        android:layout_toEndOf="@+id/basesLayout"
        android:background="@android:color/transparent"
        android:visibility="invisible"/>


</RelativeLayout>